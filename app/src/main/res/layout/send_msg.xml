<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="end"
    android:layout_marginStart="80dp"
    android:orientation="vertical"
    android:clipToPadding="false"
    android:weightSum="1"
    android:background="?attr/bgPrimary">

    <TextView
        android:id="@+id/send_message_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I am looking for a tutor."
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_gravity="end"
        android:background="@drawable/send_msg_bg"
        android:padding="10dp"
        android:layout_weight="0.8"/>

    <TextView
        android:id="@+id/send_message_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:text="10:45 AM"
        android:textColor="#B0ADAD"
        android:textSize="12sp"
        android:layout_marginTop="4dp"
        android:layout_weight="0.2"/>

</LinearLayout>
